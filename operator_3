ax=int(input("Введите координату x первой точки первого прямоугольника: "))
ay=int(input("Введите координату y первой точки первого прямоугольника: "))
bx=int(input("Введите координату x второй точки первого прямоугольника: "))
by=int(input("Введите координату y второй точки первого прямоугольника: "))
if bx>ax:
    s1=bx-ax
else:
    s1=ax-bx
if by>ay:
    s2=by-ay
else:
    s2=ay-by
print("Периметр равен: ",s1*2+s2*2)
print("Площадь равна: ",s1*s2)
cx=int(input("Введите координату x первой точки второго прямоугольника: "))
cy=int(input("Введите координату y первой точки второго прямоугольника: "))
dx=int(input("Введите координату x второй точки второго прямоугольника: "))
dy=int(input("Введите координату y второй точки второго прямоугольника: "))
if ((ax<=cx and cx<=bx) and (ay<=cy and cy<=by)) != ((ax<=dx and dx<=bx) and (ay<=dy and dy<=by)):
    print("Прямоугольники пересекаются хотя бы по одной стороне")
else:
    print("Прямоугольники не пересекаются")
