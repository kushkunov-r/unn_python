a=int(input("Введите число 'a': "))
b=int(input("Введите число 'b': "))
if a%2==0 and b%2==0:
    print("Произведение чисел: ",a*b)
else:
    print("Cумма чисел: ",a+b)
if (a%2==0 and b%2!=0) or (a%2!=0 and b%2==0):
    if a>b:
        print("Число 'a' - максимум")
    else:
        print("Число 'b' - максимум")
if a%b==0:
    print("a/b=",a/b)
if b%a==0:
    print("b/a=",b/a)
